<Window x:Class="JoshDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoshDisplay"
        mc:Ignorable="d"
        Background="DarkSlateGray"
        Title="Pixel Display" Height="800" Width="900">

        <Grid x:Name="outputGrid" Background="AliceBlue" HorizontalAlignment="Left" Margin="150,70,0,0" VerticalAlignment="Top" Height="600" Width="600">
            <Grid.ColumnDefinitions>
               
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="inputBox" Background="MediumSlateBlue" HorizontalAlignment="Left" Margin="-147,-66,0,0" TextWrapping="Wrap" Text="0,0,0" VerticalAlignment="Top" TextChanged="RichTextBox_TextChanged" Width="108"/>

        <Button Foreground="Red" x:Name="acceptButton" Background="MediumSlateBlue" Content="draw" HorizontalAlignment="Left" Margin="-26,-63,0,0" VerticalAlignment="Top" Height="19" Width="45" Click="Accept_Clicked" />
        <Button Foreground="Red" FontSize="9" x:Name="resetButton" Background="Black" Content="⚠reset image⚠" HorizontalAlignment="Left" Margin="-17,-36,0,0" VerticalAlignment="Top" Height="25" Width="76" Click="Reset_buttonClick" Grid.ColumnSpan="2" />
       
        <TextBox x:Name="displayAreaYText" Grid.Column="5" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="11,-32,0,0" TextWrapping="Wrap"  Text="1" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="displayAreaXText" Grid.Column="1" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="23,-32,0,0" TextWrapping="Wrap"   Text="1" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="displayOffsetXText" Grid.Column="1" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="23,-62,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="displayOffsetYText" Grid.Column="5" Grid.ColumnSpan="4" HorizontalAlignment="Left" Margin="11,-62,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>

        <Label Background="MediumSlateBlue" Foreground="Black" Grid.Column="8" FontSize="9" Content="Display Area (x,y) px " HorizontalAlignment="Left" Margin="14,-34,0,0" VerticalAlignment="Top" Grid.ColumnSpan="5" Width="156" Height="20"/>
        <Label Foreground="White" x:Name="outputTextBox" Background="Black" Content="" HorizontalAlignment="Left" Margin="-147,-39,0,0" VerticalAlignment="Top" Height="104" Width="125" Grid.RowSpan="3"/>
       
        <Label Background="MediumSlateBlue" Foreground="Black" Grid.Column="8" FontSize="9" Content="Display Offset  (x,y) px" HorizontalAlignment="Left" Margin="14,-66,0,0" VerticalAlignment="Top" Grid.ColumnSpan="6" Width="218" Height="22"/>
    </Grid>

</Window>
