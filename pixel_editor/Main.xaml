<Window x:Class="pixel_editor.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Editor" 
    Name="window"
    Width="800" Height="600"
    Background="Gray">
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=window, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=window, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <Grid x:Name="inspectorGrid" Height="Auto" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="inspectorChildGrid" Grid.ColumnSpan="6" Grid.RowSpan="7" Grid.Column="6" Margin="56,0,0,9" Grid.Row="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Label  FontSize="4.5" FontWeight="Bold" FontFamily="MS Gothic" Grid.Column="11" Grid.Row="0" Grid.RowSpan="4" Grid.ColumnSpan="3"  x:Name="inspectorObjName" Content="Object Name"  />
            <Label  FontSize="4.5" FontWeight="Bold" FontFamily="MS Gothic" Grid.Column="10" Grid.Row="0" Grid.RowSpan="4" Grid.ColumnSpan="3"  x:Name="inspectorObjInfo" Content="Object Details"  />
            <Label  FontSize="4.5" FontWeight="Bold" FontFamily="MS Gothic" Grid.Column="7" Grid.Row="0" Grid.RowSpan="4" Grid.ColumnSpan="3"  x:Name="gcAllocText" Content="GC Alloc:"  />
            <Image x:Name="image" RenderOptions.BitmapScalingMode ="NearestNeighbor" HorizontalAlignment="Stretch" Margin="15,15,0,0" Grid.RowSpan="11" VerticalAlignment="Stretch" Grid.ColumnSpan="7"/>
            <Button HorizontalAlignment="Stretch" VerticalAlignment="Top" MaxWidth="250" MaxHeight="25" TextBlock.FontFamily="MS Gothic" TextBlock.FontSize="4" Content="View" Background="CadetBlue" BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="1" Click="OnViewChanged" x:Name="viewBtn"/>
            <Button HorizontalAlignment="Stretch" VerticalAlignment="Top" MaxWidth="250" MaxHeight="25" TextBlock.FontFamily="MS Gothic" TextBlock.FontSize="4" Content="Play" Background="CadetBlue" BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="0" Click="OnPlay"  x:Name="playBtn"      />
            <Button HorizontalAlignment="Stretch" VerticalAlignment="Top" MaxWidth="250" MaxHeight="25" TextBlock.FontFamily="MS Gothic" TextBlock.FontSize="4" Content="Import" Background="CadetBlue" BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="2" Click="OnImportBtnPressed"  x:Name="importBtn"      />
            <Button HorizontalAlignment="Stretch" VerticalAlignment="Top" MaxWidth="250" MaxHeight="25" TextBlock.FontFamily="MS Gothic" TextBlock.FontSize="4" Content="Asset Sync" Background="CadetBlue" BorderBrush="Black" BorderThickness="1" Grid.Row="0" Grid.Column="3" Click="OnSyncBtnPressed"  x:Name="syncBtn"      />
        </Grid>
    </Grid>
</Window>