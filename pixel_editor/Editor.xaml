                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <ContentControl
                    Content="{Binding EditorMessages}"
                    Grid.Row="20"
                    Grid.Column="0"
                    Grid.ColumnSpan="36" 
                    Grid.RowSpan="4" 
                    Visibility="Visible"
                    Background="Black"
                    Foreground="White"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch" />
                <ContentControl
                    Content="{Binding ConsoleOutput}"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Background="Black"
                    Foreground="White"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="20"
                    Grid.ColumnSpan="26"/>
