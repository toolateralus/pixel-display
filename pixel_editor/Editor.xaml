<Window x:Class="pixel_editor.Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Pixel Editor" 
    Name="editorWindow"
    WindowStartupLocation="CenterScreen"
    Width="1920" Height="1080"
    Background="Black">
    <Window.Resources>
        <TextBox  x:Key="editorMessages" x:Shared="False"
                    Text =""
                    Grid.Row="20"
                    Grid.Column="0"
                    Grid.ColumnSpan="36" 
                    Grid.RowSpan="4" 
                    Visibility="Visible"
                    Background="Black"
                    Foreground="White"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    FontSize="3.95" 
                    FontFamily="MS Gothic"
                    CaretBrush="Gray"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    TextElement.FontStretch="SemiCondensed"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden" >
        </TextBox>
        <ListBox x:Key="consoleOutput" x:Shared="False"
                    Visibility="Visible"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Background="Black"
                    Foreground="White"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="20"
                    Grid.ColumnSpan="26"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    FontSize="3.95"
                    FontStyle="Normal"
                    FontStretch="SemiCondensed"
                    FontFamily="MS Gothic" >
        </ListBox>
    </Window.Resources>
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=editorWindow, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=editorWindow, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <Image  x:Name="image" RenderOptions.BitmapScalingMode = "NearestNeighbor" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid x:Name="inspectorGrid" Height="Auto" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
