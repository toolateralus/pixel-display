            </Grid.ColumnDefinitions>
            <ListBox 
                    Background="Black"
                    Foreground="White"
                    FontSize="3.95"
                    FontStyle="Normal"
                    FontStretch="SemiCondensed"
                    Height="auto" 
                    Width="auto" 
                    x:Name="fileViewerListBox"
                    SelectionChanged="fv_selection_changed" 
                    Grid.ColumnSpan="26" 
                    Grid.RowSpan="26">
            </ListBox>
        </Grid>
            <Label  FontSize="3" 
                FontWeight="Bold" 
                FontFamily="MS Gothic"
                Grid.Column="23" 
                TextBlock.TextAlignment="Left"
                VerticalAlignment="Top"
                Grid.Row="0"
                Grid.RowSpan="2" 
                Grid.ColumnSpan="4" 
                x:Name="framerateLabel" 
                Background="Black"
                Foreground="White"
                Content=""/>
            <Button HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                TextBlock.FontFamily="MS Gothic" 
                TextBlock.FontSize="4" 
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                MaxWidth="200"
                MaxHeight="70"
                Content="Play"
                    Grid.RowSpan="1"
                Grid.ColumnSpan="1"
                Grid.Row="0" 
                Grid.Column="0" 
                Click="OnPlay" 
                x:Name="playBtn"/>
            <Button HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                TextBlock.FontFamily="MS Gothic" 
                TextBlock.FontSize="4" 
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                MaxWidth="200"
                MaxHeight="70" 
                Grid.Row="0" 
                Grid.Column="1"  
                Grid.RowSpan="1"
                Grid.ColumnSpan="1"
                Content="New"
                Click="NewNodeButtonPressed"
                x:Name="newButton"/>
            <Button
            VerticalAlignment="Top" 
            TextBlock.FontFamily="MS Gothic" 
            TextBlock.FontSize="4" 
            Background="CadetBlue" 
            BorderBrush="White" 
            BorderThickness=".1"
            MaxWidth="200"
            MaxHeight="70" 
            Content="Game View"
            Grid.RowSpan="1"
            Grid.ColumnSpan="1"
            Grid.Row="0" 
            Grid.Column="4"  
            Click="OnToggleGameView"
            x:Name="ToggleGameView"/>
        </Grid>
    </Grid>
</Window>