 <Window x:Class="Pixel_Editor.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Pixel_Editor"
        Title="Pixel Editor" 
        Name="editorWindow"
        WindowStartupLocation="CenterScreen"
        Width="1920" Height="1080"
        Background="Black">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <ContextMenu x:Key="ContextMenu" x:Shared="False">
            <ItemsControl />
        </ContextMenu>
    </Window.Resources>
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="3" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
                Width="100"
                VerticalAlignment="Stretch"
                TextBlock.FontFamily="MS Gothic"
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                Content="Play"
                Click="OnPlay" 
                x:Name="playBtn"/>
            <Button
                Width="100"
                VerticalAlignment="Stretch"
                TextBlock.FontFamily="MS Gothic"
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                Content="New"
                Click="NewNodeButtonPressed"
                x:Name="newButton"
                ContextMenuService.ContextMenu="{StaticResource ContextMenu}"/>
            <Button
                Width="100"
                VerticalAlignment="Stretch"
                TextBlock.FontFamily="MS Gothic"
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                Content="Game View"
                Click="OnToggleGameView"
                x:Name="ToggleGameView"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <local:StageViewerControl Grid.Column="0"/>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" BorderBrush="White" BorderThickness="1"/>
            <StackPanel x:Name="inspectorControl" Grid.Column="2" >
                <ItemsControl ItemsSource="{Binding ComponentEditors}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="local:ComponentEditor">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}" Grid.Column="0" Foreground="White" Background="Black" />
                                    <Button Command="{Binding EditCommand}" Grid.Column="1" Content="Edit" />
                                    <Button Command="{Binding RemoveCommand}" Grid.Column="2" Content="Remove" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentControl Content="{Binding Control}" Grid.Column="1" Background="Black" Visibility="{Binding Visible, Converter={StaticResource BoolToVisibilityConverter}}" />
                                </Grid>
                                <Separator VerticalAlignment="Center" Margin="5" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Command="{Binding AddComponentCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}" ContextMenu="{StaticResource ContextMenu}" Content="Add Component"/>
            </StackPanel>
        </Grid>
        <GridSplitter Grid.Row="2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" BorderBrush="White" BorderThickness="1" />
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <local:ConsoleControl  Grid.Column="0" />
            <GridSplitter Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" BorderBrush="White" BorderThickness="1" />
            <local:FileViewerControl  Grid.Column="2" />
        </Grid>
    </Grid>
</Window>