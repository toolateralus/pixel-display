<Window x:Class="Pixel_Editor.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Pixel_Editor"
        Title="Pixel Editor" 
        Name="editorWindow"
        WindowStartupLocation="CenterScreen"
        Width="1920" Height="1080"
        Background="Black">
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=editorWindow, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=editorWindow, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <local:StageViewerWindow />
        <Grid x:Name="inspectorGrid" Height="Auto" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <local:ConsoleWindow Grid.RowSpan="6" Grid.ColumnSpan="8" Grid.Row="11" Grid.Column="18"/>
            <local:FileViewerWindow Visibility="Visible" Grid.RowSpan="6" Grid.ColumnSpan="8" Grid.Row="17" Grid.Column="18" />
            <Label  FontSize="3" 
                FontWeight="Bold" 
                FontFamily="MS Gothic"
                Grid.Column="23" 
                TextBlock.TextAlignment="Left"
                VerticalAlignment="Top"
                Grid.Row="0"
                Grid.RowSpan="2" 
                Grid.ColumnSpan="4" 
                x:Name="framerateLabel" 
                Background="Black"
                Foreground="White"
                Content=""/>
            <Button HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                TextBlock.FontFamily="MS Gothic" 
                TextBlock.FontSize="4" 
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                MaxWidth="200"
                MaxHeight="70"
                Content="Play"
                    Grid.RowSpan="1"
                Grid.ColumnSpan="1"
                Grid.Row="0" 
                Grid.Column="0" 
                Click="OnPlay" 
                x:Name="playBtn"/>
            <Button HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                TextBlock.FontFamily="MS Gothic" 
                TextBlock.FontSize="4" 
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                MaxWidth="200"
                MaxHeight="70" 
                Grid.Row="0" 
                Grid.Column="1"  
                Grid.RowSpan="1"
                Grid.ColumnSpan="1"
                Content="New"
                Click="NewNodeButtonPressed"
                x:Name="newButton"/>
            <Button
            VerticalAlignment="Top" 
            TextBlock.FontFamily="MS Gothic" 
            TextBlock.FontSize="4" 
            Background="CadetBlue" 
            BorderBrush="White" 
            BorderThickness=".1"
            MaxWidth="200"
            MaxHeight="70" 
            Content="Game View"
            Grid.RowSpan="1"
            Grid.ColumnSpan="1"
            Grid.Row="0" 
            Grid.Column="4"  
            Click="OnToggleGameView"
            x:Name="ToggleGameView"/>
        </Grid>
    </Grid>
</Window>