            </Grid>
            <Grid Visibility="Visible" x:Name="FileViewerGrid" Grid.RowSpan="6" Grid.ColumnSpan="8" Grid.Row="17" Grid.Column="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
