<Window x:Class="pixel_editor.Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Pixel Editor" 
    Name="editorWindow"
    WindowStartupLocation="CenterScreen"
    Width="1920" Height="1080"
    Background="Black">
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=editorWindow, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=editorWindow, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <Grid x:Name="inspectorGrid" Height="Auto" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Image  x:Name="image"
                    Grid.Row="1" 
                    Grid.Column="1" 
                    RenderOptions.BitmapScalingMode = "NearestNeighbor"
                    Grid.RowSpan="20"
                    Grid.ColumnSpan="22" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    />
            <TextBox 
                FontSize="3.95" 
                FontFamily="MS Gothic"
                Grid.Column="18" Grid.Row="22"
                Grid.ColumnSpan="8" Grid.RowSpan="1" 
                x:Name="editorMessages" 
                Background="Black"
                Foreground="White"
                CaretBrush="Gray"
                VerticalScrollBarVisibility="Auto" 
                VerticalContentAlignment="Center"
                Text =""
                TextElement.FontStretch="SemiCondensed"
                TextWrapping="Wrap"
                AcceptsReturn="True"
               >
            </TextBox>
            <TextBox 
                
                x:Name="consoleOutput" 
                TextWrapping="Wrap"
                Background="Black"
                Foreground="White"
                CaretBrush="Black"
                AcceptsReturn="True"
                IsReadOnly="true"
                FontSize="3.95"
                FontStyle="Normal"
                FontStretch="SemiCondensed"
                FontFamily="MS Gothic"
                Grid.Column="20" 
                Grid.Row="13"
                Grid.ColumnSpan="6" 
                Grid.RowSpan="9" Text="" 
                >
            </TextBox>
            <Label  FontSize="3" 
                    FontWeight="Bold" 
                    FontFamily="MS Gothic"
                    Grid.Column="23" 
                    TextBlock.TextAlignment="Left"
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Grid.RowSpan="2" 
                    Grid.ColumnSpan="4" 
                    x:Name="framerateLabel" 
                    Background="Black"
                    Foreground="White"
                    Content=""/>
            <Button HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    TextBlock.FontFamily="MS Gothic" 
                    TextBlock.FontSize="4" 
                    Background="CadetBlue" 
                    BorderBrush="White" 
                    BorderThickness=".1"
                    MaxWidth="200"
                    MaxHeight="70"
                    Content="Play"
                     Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Click="OnPlay" 
                    x:Name="playBtn"/>
            <Button HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    TextBlock.FontFamily="MS Gothic" 
                    TextBlock.FontSize="4" 
                    Background="CadetBlue" 
                    BorderBrush="White" 
                    BorderThickness=".1"
                    MaxWidth="200"
                    MaxHeight="70" 
                    Content="Console"
                     Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    Grid.Row="0" 
                    Grid.Column="2"  
                    Click="OnToggleConsole"
                    x:Name="ShowHideConsoleButton"/>
            <Button HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    TextBlock.FontFamily="MS Gothic" 
                    TextBlock.FontSize="4" 
                    Background="CadetBlue" 
                    BorderBrush="White" 
                    BorderThickness=".1"
                    MaxWidth="200"
                    MaxHeight="70" 
                    Grid.Row="0" 
                    Grid.Column="1"  
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    Content="New"
                    Click="NewNodeButtonPressed"
                    x:Name="newButton"/>
            <Grid x:Name="FileViewerGrid" Height="Auto" Width="Auto" Grid.ColumnSpan="12" Grid.RowSpan="10" Grid.Row="15" Margin="10,46,74,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <ListBox Height="auto" Width="auto" x:Name="fileViewerListBox" SelectionChanged="fv_selection_changed" Grid.ColumnSpan="26" Grid.RowSpan="24">

                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</Window>