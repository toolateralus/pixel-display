<Window x:Class="pixel_editor.Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Pixel Editor" 
    Name="editorWindow"
    WindowStartupLocation="CenterScreen"
    Width="1920" Height="1080"
    Background="Black">
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=editorWindow, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=editorWindow, Path=ScaleValue}" />
        </Grid.LayoutTransform>
            <Image  x:Name="image"
                    Grid.Row="1" 
                    Grid.Column="1" 
                    RenderOptions.BitmapScalingMode = "NearestNeighbor"
                    Grid.RowSpan="23"
                    Grid.ColumnSpan="23" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    />
            <Grid x:Name="inspectorGrid" Height="Auto" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Label  FontSize="3" 
                    FontWeight="Bold" 
                    FontFamily="MS Gothic"
                    Grid.Column="23" 
                    TextBlock.TextAlignment="Left"
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Grid.RowSpan="2" 
                    Grid.ColumnSpan="4" 
                    x:Name="framerateLabel" 
                    Background="Black"
                    Foreground="White"
                    Content=""/>
                <Button HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    TextBlock.FontFamily="MS Gothic" 
                    TextBlock.FontSize="4" 
                    Background="CadetBlue" 
                    BorderBrush="White" 
                    BorderThickness=".1"
                    MaxWidth="200"
                    MaxHeight="70"
                    Content="Play"
                     Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Click="OnPlay" 
                    x:Name="playBtn"/>
                <Button HorizontalAlignment="Stretch"
                   VerticalAlignment="Bottom"
                    TextBlock.FontFamily="MS Gothic" 
                    TextBlock.FontSize="4" 
                    Background="CadetBlue" 
                    BorderBrush="White" 
                    BorderThickness=".1"
                    MaxWidth="200"
                    MaxHeight="70" 
                    Content="Console"
                     Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    Grid.Row="0" 
                    Grid.Column="2"  
                    Click="OnToggleConsole"
                    x:Name="ShowHideConsoleButton"/>
                <Button HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    TextBlock.FontFamily="MS Gothic" 
                    TextBlock.FontSize="4" 
                    Background="CadetBlue" 
                    BorderBrush="White" 
                    BorderThickness=".1"
                    MaxWidth="200"
                    MaxHeight="70" 
                    Grid.Row="0" 
                    Grid.Column="1"  
                    Grid.RowSpan="1"
                    Grid.ColumnSpan="1"
                    Content="New"
                    Click="NewNodeButtonPressed"
                    x:Name="newButton"/>
                <Button
                VerticalAlignment="Top"
                TextBlock.FontFamily="MS Gothic" 
                TextBlock.FontSize="4" 
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                MaxWidth="200"
                MaxHeight="70" 
                Content="File Viewer"
                Grid.RowSpan="1"
                Grid.ColumnSpan="1"
                Grid.Row="0" 
                Grid.Column="3"  
                Click="OnToggleFileViewer"
                x:Name="ToggleFileViewButton"/>
                <Button
                VerticalAlignment="Top"
                TextBlock.FontFamily="MS Gothic" 
                TextBlock.FontSize="4" 
                Background="CadetBlue" 
                BorderBrush="White" 
                BorderThickness=".1"
                MaxWidth="200"
                MaxHeight="70" 
                Content="Game View"
                Grid.RowSpan="1"
                Grid.ColumnSpan="1"
                Grid.Row="0" 
                Grid.Column="4"  
                Click="OnToggleGameView"
                x:Name="ToggleGameView"/>
            <DockPanel Grid.Row="13" Grid.Column="12" Grid.RowSpan="10" Grid.ColumnSpan="14">
                <TabControl>
                    <TabItem Header="Console" Height="4" Width="12">
                        <Grid >
                            <TextBox 
                                    Visibility="Visible"
                                    FontSize="3.95" 
                                    FontFamily="MS Gothic"
               
                                    Grid.Column="17"
                                    Grid.Row="22"
                                    Grid.ColumnSpan="9" 
                                    Grid.RowSpan="1" 
               
                                    x:Name="editorMessages" 
                                    Background="Black"
                                    Foreground="White"
                                    CaretBrush="Gray"
                                    VerticalScrollBarVisibility="Auto" 
                                    VerticalContentAlignment="Center"
                                    Text =""
                                    TextElement.FontStretch="SemiCondensed"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    >
                            </TextBox>
                            <ListBox 
                                   Visibility="Visible"
                                    x:Name="consoleOutput" 
                                    Background="Black"
                                    Foreground="White"
                                    FontSize="3.95"
                                    FontStyle="Normal"
                                    FontStretch="SemiCondensed"
                                    FontFamily="MS Gothic"
                                    Grid.Column="17" 
                                    Grid.Row="13"
                                    Grid.ColumnSpan="9" 
                                    Grid.RowSpan="9">

                            </ListBox>
                        </Grid>
                    </TabItem>
                    <TabItem Header="File Viewer" Height="4" Width="12">
                        <Grid Visibility="Visible" x:Name="FileViewerGrid" Height="Auto" Width="Auto" Grid.ColumnSpan="18" Grid.RowSpan="18" Grid.Row="5" Grid.Column="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <ListBox 
                    Background="Black"
                    Foreground="White"
                    FontSize="3.95"
                    FontStyle="Normal"
                    FontStretch="SemiCondensed"
                    Height="auto" 
                    Width="auto" 
                    x:Name="fileViewerListBox"
                    SelectionChanged="fv_selection_changed" 
                    Grid.Column="0"
                    Grid.Row="8"
                    Grid.ColumnSpan="36" 
                    Grid.RowSpan="24">
                </ListBox>
            </Grid>
                    </TabItem>
                    <TabItem Header="Menu 3" Height="4" Width="12">>
                        <!-- Content for menu 3 goes here -->
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>
    </Grid>
</Window>