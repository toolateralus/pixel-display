<Window x:Class="pixel_editor.StageWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_editor"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="StageWnd" Height="450" Width="400">
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=window, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=window, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <Grid x:Name="s" Height="Auto" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Button 
                TextBlock.FontFamily="MS Gothic"
                TextBlock.FontSize="8"
                TextBlock.FontStyle="Oblique"
                BorderBrush="Black"
                BorderThickness="3"
                Grid.RowSpan="2" 
                Grid.ColumnSpan="4"
                Content="Set Background" 
                  Background="White" 
                Click="SetBackgroundClicked" Margin="28,31,14,0"
            />
            <Button 
                TextBlock.FontSize="13"
                TextBlock.FontFamily="MS Gothic"
                TextBlock.FontStyle="Oblique"
                Grid.Column="10"
                Grid.RowSpan="1" 
                Background="Red"
                BorderBrush="Black"
                BorderThickness="3"
                Grid.ColumnSpan="3"
                Content="Done" 
                HorizontalAlignment="Stretch" 
                Grid.Row="12" 
                VerticalAlignment="Stretch" 
                Click="CreateNewStageButtonPressed"
            />
            <TextBox
                x:Name="stageNameTxt"
                Text="Stage Name"
                 BorderBrush="Black"
                BorderThickness="3"
                TextBlock.FontSize="13"
                TextBlock.FontStyle="Italic"
                TextBlock.TextAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Column="1"
                Grid.Row="8"
                Grid.RowSpan="1"
                Grid.ColumnSpan="12"
                Background="FloralWhite"
                />
            <TextBox
                x:Name="nodeCtTxt"
                Text="Node Count 100)"
                TextBlock.FontStyle="Italic"
               BorderBrush="Black"
                BorderThickness="3"
                TextBlock.FontSize="13"
                TextBlock.TextAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Column="1"
                Grid.Row="10"
                Grid.RowSpan="1"
                Grid.ColumnSpan="12"
                Background="FloralWhite"
                />
            <CheckBox 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Grid.ColumnSpan="11"
                BorderBrush="MediumBlue"
                BorderThickness="2"
                Grid.Row="1"
                Background="White"
                Foreground="MediumBlue"
                Grid.Column="3" 
                Content="Spawn Player?"
                TextBlock.FontSize="12"
                TextBlock.FontFamily="MS Gothic"
                TextBlock.FontStyle="Oblique"
                Click="OnStarterAssetsButtonClicked" Margin="28,4,0,0" Width="338"
                />

        </Grid>
    </Grid>
</Window>
