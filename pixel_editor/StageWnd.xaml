<Window x:Class="pixel_editor.StageWnd"
        x:Name="window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_editor"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="StageWnd" Height="450" Width="400">
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=window, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=window, Path=ScaleValue}" />
        </Grid.LayoutTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Button 
                TextBlock.FontFamily="MS Gothic"
                TextBlock.FontSize="5"
                TextBlock.FontStyle="Oblique"
                Grid.RowSpan="20" 
                Grid.ColumnSpan="20"
                Content="Set Background" 
                  Background="White" 
                Click="SetBackgroundClicked" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            />
            <Button 
                TextBlock.FontSize="5"
                TextBlock.FontFamily="MS Gothic"
                TextBlock.FontStyle="Oblique"
                Grid.Column="11"
                Grid.RowSpan="1" 
                Grid.ColumnSpan="1"
                Grid.Row="12" 
                Background="Red"
                BorderBrush="Black"
                BorderThickness="3"
                Content="Done" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Click="CreateNewStageButtonPressed"
            />
            <TextBox
                x:Name="stageNameTxt"
                Text="Stage Name"
                TextBlock.FontSize="5"
                TextBlock.FontStyle="Italic"
                TextBlock.TextAlignment="Center"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="9"
                Grid.Row="9"
                Grid.RowSpan="1"
                Grid.ColumnSpan="5"
                Background="FloralWhite"
                />
            <TextBox
                x:Name="nodeCtTxt"
                Text="Node Count 100)"
                TextBlock.FontStyle="Italic"
                TextBlock.FontSize="5"
                TextBlock.TextAlignment="Center"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Column="9"
                Grid.Row="10"
                Grid.RowSpan="1"
                Grid.ColumnSpan="5"
                Background="FloralWhite"
                />
            <CheckBox 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Grid.ColumnSpan="10"
                Grid.Row="7"
                Grid.Column="9" 
                Background="White"
                Foreground="MediumBlue"
                Content="Spawn Player?"
                TextBlock.FontSize="5"
                TextBlock.FontFamily="MS Gothic"
                TextBlock.FontStyle="Oblique"
                Click="OnStarterAssetsButtonClicked" 
                />
            <Image 
                Grid.ColumnSpan="11" 
                HorizontalAlignment="Left" 
                Height="200" 
                Grid.RowSpan="7" 
                VerticalAlignment="Top" 
                Width="300"
                x:Name="imgPreview"/>

        </Grid>
</Window>
