<Window x:Class="pixel_editor.StageWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_editor"
        mc:Ignorable="d"
        Title="StageWnd" Height="450" Width="400">
    <Grid>
        <Grid x:Name="s" Height="Auto" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Button 
                TextBlock.FontFamily="MS Gothic"
                TextBlock.FontSize="6"
                Grid.Column="0"
                Grid.RowSpan="1" 
                Grid.ColumnSpan="3"
                Content="Set Background" 
                HorizontalAlignment="Stretch" 
                Grid.Row="0" 
                VerticalAlignment="Stretch" 
                Click="SetBackgroundClicked"
            />
            <Button 
                TextBlock.FontSize="5"
                TextBlock.FontFamily="MS Gothic"
                Grid.Column="3"
                Grid.RowSpan="1" 
                Grid.ColumnSpan="3"
                Content="Create New Stage" 
                HorizontalAlignment="Stretch" 
                Grid.Row="0" 
                VerticalAlignment="Stretch" 
                Click="CreateNewStageButtonPressed"
            />
            <TextBox
                x:Name="stageNameTxt"
                Text="Stage Name"
                TextBlock.FontSize="5"
                TextBlock.FontStyle="Italic"
                TextBlock.TextAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Column="0"
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.ColumnSpan="6"
                Background="BlanchedAlmond"
                />
            <TextBox
                x:Name="nodeCtTxt"
                Text="Number of Nodes"
                TextBlock.FontStyle="Italic"
                TextBlock.FontSize="5"
                TextBlock.TextAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Column="0"
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.ColumnSpan="6"
                Background="BlanchedAlmond"
                />
            <CheckBox 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center"
                Grid.ColumnSpan="7"
                Grid.RowSpan="1"
                Grid.Row="0"
                Grid.Column="6" 
                Content="Spawn starter assets?"
                TextBlock.FontSize="7"
                TextBlock.FontFamily="MS Gothic"
                Click="OnStarterAssetsButtonClicked"
                />
            

        </Grid>
    </Grid>
</Window>
